<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="OptionalCourseAllocationPU" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/post</jta-data-source>

        <!-- Enables auto discovery of persistent classes, -->
        <!-- otherwise they must be listed using <class>  -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <shared-cache-mode>ALL</shared-cache-mode>

        <properties>
            <property name="toplink.platform.class.name"
                      value="oracle.toplink.platform.database.MySQL4Platform"/>
